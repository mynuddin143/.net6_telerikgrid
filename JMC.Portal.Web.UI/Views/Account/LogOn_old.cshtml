@*<%@ Control Language="C#" Inherits="System.Web.Mvc.ViewUserControl<JMC.Portal.Web.UI.Models.Account.LogOnForm>" %>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">*@
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<title>JMC Corporate Portal </title>
    <meta http-equiv="X-UA-Compatible" content="IE=9; IE=8; IE=7; IE=EDGE" />
	<link href="/Content/Site.css" rel="stylesheet" type="text/css" />
	<script src="/Scripts/jquery-1.6.min.js" type="text/javascript"></script>
	<script type="text/javascript">
		$(document).ready(function () {
			$('#UserName').focus();
		});
	</script>
</head>
<body>

	<table cellpadding="0" cellspacing="0" class="mainTable">
		<tr>
			<td style="background-color: #941800;">
				<img src="/Content/Images/bannerLeft.png" width="18" height="115" />
			</td>
			<td>
				<div id="banner">
					<div id="logo">
					</div>
				</div>
			</td>
			<td style="background-color: #941800;">
				<img src="/Content/Images/bannerRight.png" width="18" height="115" />
			</td>
		</tr>
		<tr>
			<td style="background: url(/Content/Images/leftRailBackground.png) repeat-y; background-color: #941800;" width="18">
			</td>
			<td id="mainContent">
				<div>
				</div>
				<div style="float: none; clear: both;">
				</div>
				<div id="rightContent">
					<div id="rightAJAXContent">
						<%: Model.LogonUser %>
						<%: Model.ReturnMessage %>
						<% using (Html.BeginForm("LogOn", "Account", FormMethod.Post, new { id = "logOnForm", name = "logOnForm" })) {%>
						<table cellpadding="0" cellspacing="0" style="margin-top: 60px; margin-bottom: 40px;">
							<tr>
								<td class="inputLabel">
									User Name:
								</td>
								<td>
									<input id="UserName" name="UserName" type="text" />
								</td>
							</tr>
							<tr>
								<td class="inputLabel">
									Password:
								</td>
								<td>
									<input id="Password" name="Password" type="password" />
								</td>
								<td>
									<input type="submit" value="Log On" style="margin-left: 5px;" />
								</td>
							</tr>
                            <tr><td><input type="hidden" id="returnUrl" name="returnUrl"  value="<%=ViewData["returnUrl"]%>" /></td></tr>
						</table>
						<% } %>
					</div>
				</div>
			</td>
			<td style="background: url(/Content/Images/rightRailBackground.png) repeat-y; background-color: #941800;" width="18">
			</td>
		</tr>
		<tr>
			<td style="background-color: #941800;">
				<img src="/Content/Images/footerLeft.png" width="18" height="40" />
			</td>
			<td>
				<div id="footer">
					<p class="copyrightText">
						Copyright (c) 2014 JMC Steel Group. All rights reserved.</p>
				</div>
			</td>
			<td style="background-color: #941800;">
				<img src="/Content/Images/footerRight.png" width="18" height="40" />
			</td>
		</tr>
	</table>
</body>
</html>
