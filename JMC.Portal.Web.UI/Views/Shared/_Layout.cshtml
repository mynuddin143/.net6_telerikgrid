    <script>
        $(document).ready(function () {

            $("#sidenavBar li a").click(function () {

                var element = $(this);
                var isClosebtn = element[0].className == "closebtn";
                if (!isClosebtn) {
                    $("#sidenavBar li a.active").removeClass("active");
                    $(this).addClass("active");
                }
            });

            $("#dropdown-container li a").click(function () {
                $('.nav-item').removeClass('selected');
                $(this).parent().addClass('selected');
            });
                       

            $("#horizantalNavbar li a").click(function () {
                //debugger;

                //$(this).addClass("active");
                //$(this).addClass('active');
                //$('.nav-item').removeClass('selected');
                //$('.nav-link').removeClass('active');
                //$('.nav-link').addClass('active');
                //$(this).parent().addClass('selected');
            });
            
            var dropdown = document.getElementsByClassName("dropdown-btn");

           
            for (i = 0; i < dropdown.length; i++) {
                dropdown[i].addEventListener("click", function () {
                    this.classList.toggle("active");
                    var dropdownContent = this.nextElementSibling;
                    if (dropdownContent.style.display === "block") {
                        dropdownContent.style.display = "none";

                    } else {
                        dropdownContent.style.display = "block";

                    }
                });
            }


        })


        function openNav() {
            document.getElementById("sidenavBar").style.width = "200px";
            document.getElementById("main").style.marginLeft = "200px";
            document.getElementById("main").style.marginLeft = "200px";
            document.getElementById("productInquiry").style.display = "block";
        }

        function closeNav() {
            document.getElementById("sidenavBar").style.width = "0";
            document.getElementById("main").style.marginLeft = "0";
            document.getElementById("productInquiry").style.display = "none";
        }
    </script>
</head>
<body>
    <div style="margin:5px;">
        <span>Header</span>
    </div>

    <div class="wrapper">
        <div class="sidenav" id="sidenavBar">
            <input type="button" class="dropdown-btn btn btn-secondary" onclick="closeNav()" value="Close" />
            @await Component.InvokeAsync("SideMenu", new { mainMenu = ViewData["SelectedMenu"] })
        </div>         

        <div id="main">

            <span style="font-size:30px;cursor:pointer" onclick="openNav()"> &#9776;</span>
            <header>

                <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3">
                    <div class="container">
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                            @await Component.InvokeAsync("Menu", new { testId = 1 })
                        </div>
                    </div>
                </nav>
            </header>
            <div id="ajaxContentRight">
                @RenderBody()
            </div>

        </div>
    </div>

